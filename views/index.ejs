<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Todo List App</title>
    <!-- Link to our static CSS file -->
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Todo List</h1>
        
        <!-- Form to CREATE a new todo -->
        <form action="/todos" method="POST" class="add-form">
            <input type="text" name="title" placeholder="Add a new todo..." required>
            <button type="submit">Add Todo</button>
        </form>

        <!-- The list of all todos -->
        <ul class="todo-list">
            <!-- EJS loop to iterate over the 'todos' array passed from the server -->
            <% todos.forEach(todo => { %>
                <li class="todo-item">
                    <!-- Displat the title of the todo. We use a CSS class to style it differently if completed. -->
                    <span class="todo-title <%= todo.completed ? 'completed' : '' %>">
                        <%= todo.title %>
                    </span>

                    <div class="buttons">
                        <!-- Form to UPDATE (complete) a todo -->
                        <!-- The action URL includes the specific todo ID -->
                        <form action="/todos/complete/<%= todo.id %>" method="PATCH" style="display:inline;">
                            <button type="submit" class="complete-btn" <%= todo.completed ? 'disabled' : '' %>>
                                <%= todo.completed ? "Completed" : "Mark Complete" %>
                            </button>
                        </form>

                        <!-- Form to DELETE a todo -->
                        <form action="/todos/delete/<%= todo.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="delete-btn">
                                Delete
                            </button>
                        </form>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>
</body>
</html>
